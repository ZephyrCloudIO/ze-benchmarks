{
  "name": "ze-benchmarks",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "build": "pnpm --filter ze-evaluator run build && pnpm --filter @ze/worker-client run build && pnpm --filter @ze/harness run build",
    "build:evals": "pnpm --filter ze-evaluator run build",
    "build:adapters": "pnpm --filter @ze/agent-adapters run build",
    "build:worker-client": "pnpm --filter @ze/worker-client run build",
    "dev": "echo '⚠️  Start worker and dashboard separately:' && echo '  Terminal 1: pnpm dev:worker' && echo '  Terminal 2: pnpm dev:dashboard'",
    "dev:worker": "pnpm --filter ze-benchmarks-worker run dev",
    "dev:dashboard": "pnpm --filter benchmark-report run dev",
    "bench": "tsx packages/harness/src/cli.ts",
    "harness": "tsx packages/harness/src/cli.ts",
    "cli": "tsx packages/harness/src/cli.ts",
    "db:migrate": "pnpm --filter ze-benchmarks-worker run db:migrate:local",
    "db:sync": "pnpm --filter ze-benchmarks-worker run db:sync-from-prod",
    "deploy:dev": "pnpm --filter ze-benchmarks-worker run deploy:dev",
    "deploy:staging": "pnpm --filter ze-benchmarks-worker run deploy:staging",
    "deploy:production": "pnpm --filter ze-benchmarks-worker run deploy:production"
  },
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@types/cli-progress": "^3.11.6",
    "@types/figlet": "^1.7.0",
    "tsx": "^4.20.6"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3",
      "core-js",
      "esbuild"
    ]
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "chalk": "^5.6.2",
    "cli-progress": "^3.12.0",
    "dotenv": "^16.4.5",
    "figlet": "^1.9.3"
  }
}